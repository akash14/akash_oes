<html>
  <head>
   <title>Online Examination</title>
    <%= stylesheet_link_tag 'home' %>
  </head>
  <body>
  	 <%= form_for @quizz, :as => :quizz, :url => create_quizz_path(@quizz), :method => :post do |f| %>
	<div class="container">
      <fieldset>
		<h1>New Question</h1>

 <div class="form-row">
    <label><%= f.label 'Question:' %></label>
    <%= f.text_area :question %>
    <%= show_field_error(@quizz, :question) %>
  </div>

  <div class="form-row">
    <label><%= f.label 'Option 1:' %></label>
     <%= f.text_field :ans1%>
   <%= show_field_error(@quizz, :ans1) %>
  </div>

  <div class="form-row">
    <label><%= f.label 'Option 2:' %></label>
     <%= f.text_field :ans2 %>
   <%= show_field_error(@quizz, :ans2) %>
  </div>

  <div class="form-row">
    <label><%= f.label 'Option 3:' %></label>
  <%= f.text_field :ans3 %>
    <%= show_field_error(@quizz, :ans3) %>
  </div>

   <div class="form-row">
    <label><%= f.label 'Option 4:' %></label>
  <%= f.text_field :ans4 %>
    <%= show_field_error(@quizz, :ans4) %>
  </div>

   <div class="form-row">
    <label><%= f.label 'Correct Answer:' %></label>
  <%= f.text_field :correctAns %>
    <%= show_field_error(@quizz, :correctAns) %>
  </div>

 		 <%= f.submit 'Create' %>
 		 <%= f.submit 'Clear Form', :type => 'reset' %>
		 <p><%= link_to 'Back', quizzs_path %></p>
    </fieldset>
</div>
<%end%>
</body>
</html>